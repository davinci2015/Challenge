<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/BarTheme</item>
    </style>

    <style name="BarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/foundation</item>
    </style>

    <style name="Input">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Input.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="Input.Name">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>
    <style name="Input.Password">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="Input.Password.Login">
        <item name="android:imeOptions">actionGo</item>
    </style>

</resources>
